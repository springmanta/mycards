<!-- app/views/sets/index.html.erb -->
<div class="max-w-7xl mx-auto mt-8 px-7 py-8">
  <!-- Header -->
  <h1 class="text-4xl font-display font-bold mb-6">Magic: The Gathering Sets</h1>

    <p class="text-gray-600 mb-6">Showing <%= @sets.count %> sets</p>

  <!-- Collapsible Filters -->
  <div class="mb-6" data-controller="toggle" data-toggle-open-value="<%= params[:q].present? || params[:letter].present? || params[:sort].present? && params[:sort] != 'name_asc' %>">
    <button type="button"
            data-action="click->toggle#toggle"
            class="w-full flex items-center justify-between bg-gray-50 rounded-xl p-2 border-2 border-gray-200 hover:border-umber transition-colors cursor-pointer">
      <span class="font-semibold text-gray-700 flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
        </svg>
        Filters
        <% if params[:q].present? || params[:letter].present? || params[:sort].present? && params[:sort] != 'name_asc' %>
          <span class="px-2 py-0.5 bg-umber text-white text-xs rounded-full">Active</span>
        <% end %>
      </span>
      <svg data-toggle-target="icon" class="w-5 h-5 text-gray-500 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </button>

    <!-- Filter content (collapsible) -->
    <div data-toggle-target="content" class="hidden">
      <div class="mt-4 bg-gray-50 rounded-xl p-4">
        <!-- Search & Sort Bar -->
        <%= form_with url: sets_path, method: :get, class: "mb-6", data: { turbo_frame: "_top", controller: "auto-submit" } do |f| %>
          <div class="flex flex-col md:flex-row gap-4">
            <div data-controller="set-autocomplete" class="flex-1 relative">
              <%= f.text_field :q,
                  value: params[:q],
                  placeholder: "Search sets...",
                  autocomplete: "off",
                  autofocus: true,
                  class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-umber bg-white focus:outline-none",
                  data: {
                    set_autocomplete_target: "input",
                    action: "input->set-autocomplete#search"
                  } %>

              <!-- Autocomplete dropdown -->
              <div data-set-autocomplete-target="results"
                  class="hidden absolute z-20 w-full bg-white border border-gray-300 rounded-lg shadow-lg max-h-60 overflow-y-auto mt-2">
              </div>
            </div>

            <div class="w-full md:w-48">
              <%= f.select :sort,
                  [
                    ['Name (A-Z)', 'name_asc'],
                    ['Name (Z-A)', 'name_desc'],
                    ['Newest First', 'released_desc'],
                    ['Oldest First', 'released_asc']
                  ],
                  { selected: params[:sort] || 'name_asc' },
                  {
                    class: "w-full font-display px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-umber focus:outline-none",
                    data: { action: "change->auto-submit#submit" }
                  } %>
            </div>

            <%= f.submit "Search", class: "px-6 py-3 bg-umber text-white rounded-xl font-semibold hover:bg-golden-brown transition-colors cursor-pointer" %>

            <% if params[:q].present? || params[:letter].present? || params[:sort] != 'name_asc' %>
              <%= link_to "Clear", sets_path, class: "px-6 py-3 bg-gray-200 text-gray-700 rounded-xl font-semibold hover:bg-gray-300 transition-colors text-center" %>
            <% end %>
          </div>
        <% end %>

        <!-- Alphabet Filter -->
        <div class="flex flex-wrap gap-2 rounded-xl p-4 bg-white">
          <%= link_to "All", sets_path(sort: params[:sort], q: params[:q]),
              class: "px-3 py-1.5 rounded-lg text-sm font-semibold transition-colors #{params[:letter].blank? ? 'bg-umber text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
          <% ('A'..'Z').each do |letter| %>
            <%= link_to letter, sets_path(letter: letter, sort: params[:sort], q: params[:q]),
                class: "px-3 py-1.5 rounded-lg text-sm font-semibold transition-colors #{params[:letter] == letter ? 'bg-umber text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Sets Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @sets.each do |set| %>
      <%= link_to set_path(set.code), class: "block bg-white border-2 border-gray-200 rounded-xl p-6 hover:border-umber hover:shadow-lg transition-all" do %>
        <div class="flex items-center gap-3 mb-2">
          <% if set.icon_svg_uri %>
            <%= image_tag set.icon_svg_uri, class: "w-8 h-8", alt: "" %>
          <% end %>
          <h3 class="text-xl font-display flex-1"><%= set.name %></h3>
        </div>
        <p class="text-sm text-gray-600 font-mono"><%= set.code.upcase %></p>
        <% if set.released_at %>
          <p class="text-sm text-gray-500 mt-2">
            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <%= set.released_at.strftime("%B %Y") %>
          </p>
        <% end %>
        <p class="text-sm font-display text-gray-500 mt-1">
          <%= set.bulk_cards.count %> cards
        </p>
      <% end %>
    <% end %>
  </div>
</div>
