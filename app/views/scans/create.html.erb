<div class="max-w-xl mx-auto mt-8 px-7 py-8">
  <div class="mb-8">
    <h1 class="text-4xl font-bold">Scan Results</h1>
    <p class="text-gray-600 mt-1">Detected: "<%= @detected_text %>"</p>
  </div>

  <% if @matches.any? %>
    <div class="space-y-3">
      <% @matches.each do |card| %>
        <%= link_to card_path(card), class: "block bg-white border-2 border-gray-200 rounded-xl p-4 hover:border-umber transition-colors group" do %>
          <div class="flex items-center gap-4">
            <% if card.image_uri.present? %>
              <%= image_tag card.image_uri, alt: card.name, class: "w-16 rounded-lg shadow", loading: "lazy" %>
            <% end %>
            <div class="flex-1">
              <h3 class="font-bold text-gray-900 group-hover:text-goldenrod transition-colors"><%= card.name %></h3>
              <p class="text-sm text-gray-500"><%= card.magic_set&.name %> â€¢ <%= card.rarity&.capitalize %></p>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 bg-white rounded-xl border-2 border-dashed border-gray-300">
      <h3 class="text-lg font-bold text-gray-900">No matches found</h3>
      <p class="mt-1 text-sm text-gray-500">Try taking a clearer photo with the card name visible.</p>
      <%= link_to "Try Again", new_scan_path,
          class: "mt-4 inline-block bg-umber hover:bg-golden-brown text-white font-semibold px-4 py-2 rounded-xl transition-colors" %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to "Scan Another", new_scan_path,
        class: "text-sm font-semibold text-gray-400 hover:text-umber transition-colors" %>
  </div>
</div>
