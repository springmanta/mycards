<!-- app/views/registrations/new.html.erb -->
<div class="max-w-md mx-auto mt-8">
  <h1 class="text-2xl font-bold mb-6">Sign Up</h1>

  <%= form_with model: @user, url: registration_path do |f| %>
    <% if @user.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :email_address, class: "block mb-2" %>
      <%= f.email_field :email_address, required: true, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block mb-2" %>
      <%= f.password_field :password, required: true, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block mb-2" %>
      <%= f.password_field :password_confirmation, required: true, class: "w-full border rounded px-3 py-2" %>
    </div>

    <%= f.submit "Sign Up", class: "w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600" %>
  <% end %>

  <p class="mt-4 text-center">
    Already have an account? <%= link_to "Log in", new_session_path, class: "text-blue-500" %>
  </p>
</div>
