<!-- app/views/registrations/new.html.erb -->
<div class="max-w-md mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Sign Up</h1>

  <%= form_with model: @user, class: "space-y-4", url: registration_path do |f| %>
    <% if @user.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :email_address, class: "block text-sm font-semibold mb-2" %>
      <%= f.email_field :email_address, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-600 focus:border-transparent text-base" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-semibold mb-2" %>
      <%= f.password_field :password, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-600 focus:border-transparent text-base" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block text-sm font-semibold mb-2" %>
      <%= f.password_field :password_confirmation, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-600 focus:border-transparent text-base" %>
    </div>

    <%= f.submit "Sign Up", class: "w-full bg-yellow-800 text-white px-6 py-3 rounded-lg font-semibold hover:bg-yellow-700 transition-colors cursor-pointer text-base" %>
  <% end %>

  <p class="mt-4 text-center">
    Already have an account? <%= link_to "Log in", new_session_path, class: "block text-center text-yellow-800 hover:text-yellow-700 font-semibold" %>
  </p>
</div>
