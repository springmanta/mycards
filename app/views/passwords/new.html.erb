<div class="min-h-screen flex items-center justify-center px-4 py-12 bg-gradient-to-br from-gray-50 to-gray-100">
  <div class="max-w-md w-full">
    <!-- Card Container -->
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <!-- Header -->
      <div class="text-center mb-8">
        <div class="mx-auto w-16 h-16 bg-umber/10 rounded-full flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-umber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
          </svg>
        </div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Forgot your password?</h1>
        <p class="text-gray-600">No worries! Enter your email and we'll send you reset instructions.</p>
      </div>

      <!-- Alert -->
      <% if alert = flash[:alert] %>
        <div class="mb-6 p-4 bg-red-50 border-l-4 border-red-400 rounded-lg">
          <p class="text-red-700 font-medium" id="alert"><%= alert %></p>
        </div>
      <% end %>

      <%= form_with url: passwords_path, class: "space-y-6" do |form| %>
        <!-- Email Field -->
        <div>
          <%= form.label :email_address, "Email address", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= form.email_field :email_address,
              required: true,
              autofocus: true,
              autocomplete: "username",
              placeholder: "you@example.com",
              value: params[:email_address],
              class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-umber focus:border-umber transition-all text-base" %>
        </div>

        <!-- Submit Button -->
        <%= form.submit "Send reset instructions",
            class: "w-full bg-gradient-to-r from-coffee to-violet text-white px-6 py-3 rounded-xl font-semibold hover:shadow-lg transform hover:-translate-y-0.5 transition-all cursor-pointer text-base" %>
      <% end %>

      <!-- Divider -->
      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-200"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-white text-gray-500">Remember your password?</span>
        </div>
      </div>

      <!-- Back to Sign In -->
      <%= link_to new_session_path, class: "block w-full text-center bg-white border-2 border-gray-200 text-gray-700 px-6 py-3 rounded-xl font-semibold hover:border-umber hover:text-umber transition-all" do %>
        Back to sign in
      <% end %>
    </div>

    <!-- Help Text -->
    <p class="text-center text-sm text-gray-600 mt-6">
      Need help? <a href="mailto:support@mycards.com" class="text-umber hover:underline font-semibold">Contact support</a>
    </p>
  </div>
</div>
