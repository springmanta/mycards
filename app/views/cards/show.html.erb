<!-- app/views/cards/show.html.erb -->
<div class="max-w-6xl mx-auto mt-8 px-7 py-8">
  <div class="grid lg:grid-cols-3 gap-8">
    <!-- Card Image -->
    <div class="lg:col-span-1">
      <%= image_tag @card.image_uri,
          alt: @card.name,
          class: "w-full rounded-3xl shadow-xl sticky top-8" %>
    </div>

    <!-- Card Details -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Title and Set Info -->
      <div>
        <h1 class="text-4xl font-bold mb-3"><%= @card.name %></h1>
        <div class="flex flex-wrap gap-2">
          <span class="px-3 py-1 bg-gray-100 rounded-full text-sm font-semibold">
            <%= link_to @card.magic_set.name, set_path(@card.set_code), class: "hover:text-umber" %>
          </span>
          <span class="px-3 py-1 bg-gray-100 rounded-full text-sm font-semibold">
            <%= @card.set_code.upcase %>
          </span>
          <span class="px-3 py-1 bg-gray-100 rounded-full text-sm font-semibold capitalize">
            <%= @card.rarity %>
          </span>
        </div>
      </div>

      <!-- Card Type and Stats -->
      <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-6">
        <div class="grid md:grid-cols-2 gap-4">
          <div>
            <p class="text-sm text-gray-600 mb-1">Type</p>
            <p class="font-semibold"><%= @card.type_line %></p>
          </div>
          <% if @card.mana_cost.present? %>
            <div>
              <p class="text-sm text-gray-600 mb-1">Mana Cost</p>
              <p class="font-mono font-semibold"><%= @card.mana_cost %></p>
            </div>
          <% end %>
        </div>

        <% if @card.metadata['power'].present? && @card.metadata['toughness'].present? %>
          <div class="mt-4 pt-4 border-t border-gray-200">
            <p class="text-sm text-gray-600 mb-1">Power / Toughness</p>
            <p class="font-bold text-2xl"><%= @card.metadata['power'] %> / <%= @card.metadata['toughness'] %></p>
          </div>
        <% end %>
      </div>

      <!-- Oracle Text -->
      <% if @card.metadata['oracle_text'].present? %>
        <div class="bg-white border-2 border-gray-200 rounded-xl p-6">
          <h3 class="text-sm font-semibold text-gray-600 mb-3">Oracle Text</h3>
          <p class="text-gray-800 leading-relaxed whitespace-pre-line"><%= @card.metadata['oracle_text'] %></p>
        </div>
      <% end %>

      <!-- Price -->
      <% if @card.eur_price %>
        <div class="bg-green-50 border-l-4 border-green-400 rounded-lg p-6">
          <p class="text-sm text-gray-600">Market Price (EUR)</p>
          <p class="text-2xl font-bold text-green-600">â‚¬<%= number_with_precision(@card.eur_price, precision: 2) %></p>
        </div>
      <% end %>

      <!-- Add to Collection Form -->
    <div class="bg-white border-2 border-gray-200 rounded-xl p-6">
      <h3 class="font-bold mb-4">Add to Your Collection</h3>

      <%= form_with model: CollectionCard.new, url: collection_cards_path, method: :post, class: "space-y-4" do |f| %>
        <%= f.hidden_field :bulk_card_id, value: @card.id %>

        <div>
          <%= f.label :collection_id, "Collection", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.select :collection_id,
              options_from_collection_for_select(@collections, :id, :name),
              {},
              class: "w-full border-2 border-gray-200 rounded-lg p-3 focus:border-umber focus:outline-none" %>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :quantity, class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= f.number_field :quantity,
                value: 1,
                min: 1,
                class: "w-full border-2 border-gray-200 rounded-lg p-3 focus:border-umber focus:outline-none" %>
          </div>

          <div>
            <%= f.label :condition, class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= f.select :condition,
                [["Mint", "mint"], ["Near Mint", "near_mint"], ["Excellent", "excellent"], ["Good", "good"], ["Light played", "light_played"], ["Played", "played"], ["Poor", "poor"]],
                { selected: 'near_mint' },
                class: "w-full border-2 border-gray-200 rounded-lg p-3 focus:border-umber focus:outline-none" %>
          </div>
        </div>

        <div class="flex items-center">
          <%= f.check_box :foil, class: "w-5 h-5 text-umber border-gray-300 focus:ring-umber" %>
          <%= f.label :foil, "Foil", class: "ml-2 text-sm font-semibold text-gray-700" %>
        </div>

        <%= f.submit "Add to Collection",
            class: "w-full bg-umber text-white py-3 rounded-xl font-semibold hover:bg-golden-brown transition-colors cursor-pointer" %>
      <% end %>
    </div>
    </div>
  </div>
</div>
