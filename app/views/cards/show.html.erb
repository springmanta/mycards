<%# app/views/cards/show.html.erb %>

<div class="max-w-6xl mx-auto mt-8 px-7 py-8">
  <div class="grid lg:grid-cols-3 gap-8"
       data-controller="card-preview"
       data-card-preview-printings-value="<%= @all_printings.map { |p|
         {
           id: p.id,
           image_uri: p.image_uri,
           eur_price: p.eur_price,
           set_name: p.magic_set&.name || p.set_code.upcase,
           set_code: p.set_code,
           rarity: p.rarity
         }
       }.to_json %>">

    <!-- Left: Card Image + Form -->
    <div class="lg:col-span-1 space-y-4">
      <% if @card.image_uri.present? %>
        <%= image_tag @card.image_uri,
            alt: @card.name,
            class: "w-full rounded-xl shadow-xl",
            data: { card_preview_target: "image" } %>
      <% else %>
        <div class="w-full aspect-[5/7] bg-gray-200 rounded-3xl shadow-xl flex items-center justify-center">
          <div class="text-center p-4">
            <p class="text-gray-500 text-lg font-semibold"><%= @card.name %></p>
            <p class="text-gray-400 text-sm mt-2">No image available</p>
          </div>
        </div>
      <% end %>

      <!-- Version Switcher -->
      <% if @all_printings.size > 1 %>
        <div class="bg-white border-2 border-gray-200 rounded-xl p-4">
          <p class="text-sm font-semibold text-gray-600 mb-2">Version / Printing</p>
          <select id="printing-select"
                  data-action="change->card-preview#updateImage"
                  class="w-full px-4 py-2.5 border-2 border-gray-200 rounded-lg focus:border-umber focus:outline-none">
            <% @all_printings.each do |printing| %>
              <option value="<%= printing.id %>"
                      <%= 'selected' if printing.id == @card.id %>>
                <%= printing.magic_set&.name || printing.set_code.upcase %> (<%= printing.set_code.upcase %>) — <%= printing.rarity.capitalize %>
              </option>
            <% end %>
          </select>
        </div>
      <% end %>

      <!-- Add to Collection Form -->
      <div class="bg-white border-2 border-gray-200 rounded-xl p-6">
        <%= form_with model: CollectionCard.new, url: collection_cards_path, method: :post, class: "space-y-4" do |f| %>
          <%= f.hidden_field :bulk_card_id, value: @card.id, data: { card_preview_target: "cardId" } %>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <%= f.label :collection_id, "Collection", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.select :collection_id,
                  options_from_collection_for_select(@collections, :id, :name),
                  {},
                  class: "w-full border-2 border-gray-200 rounded-lg p-3 focus:border-umber focus:outline-none" %>
            </div>

            <div>
              <%= f.label :quantity, class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.number_field :quantity,
                  value: 1, min: 1,
                  class: "w-full border-2 border-gray-200 rounded-lg p-2 focus:border-umber focus:outline-none" %>
            </div>

            <div>
              <%= f.label :condition, class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.select :condition,
                  [["Mint", "mint"], ["Near Mint", "near_mint"], ["Excellent", "excellent"], ["Good", "good"], ["Light Played", "light_played"], ["Played", "played"], ["Poor", "poor"]],
                  { selected: 'near_mint' },
                  class: "w-full border-2 border-gray-200 rounded-lg p-2 focus:border-umber focus:outline-none" %>
            </div>
          </div>

          <div class="flex items-center">
            <%= f.check_box :foil, class: "w-5 h-5 text-umber border-gray-300 focus:ring-umber cursor-pointer" %>
            <%= f.label :foil, "Foil", class: "ml-2 text-sm font-semibold text-gray-700 cursor-pointer" %>
          </div>

          <%= f.submit "Add to Collection",
              class: "w-full bg-goldenrod text-white py-2 rounded-xl font-semibold hover:bg-golden-brown transition-colors cursor-pointer" %>
        <% end %>
      </div>
    </div>

    <!-- Right: Card Details -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Title and Set Info -->
      <div>
        <h1 class="text-4xl font-bold mb-3"><%= @card.name %></h1>
        <div class="flex flex-wrap gap-2">
          <span class="px-3 py-1 bg-gray-100 rounded-full text-sm font-semibold">
            <%= link_to @card.magic_set.name, set_path(@card.set_code), class: "hover:text-umber" %>
          </span>
          <span class="px-3 py-1 bg-gray-100 rounded-full text-sm font-semibold">
            <%= @card.set_code.upcase %>
          </span>
          <span class="px-3 py-1 bg-gray-100 rounded-full text-sm font-semibold capitalize">
            <%= @card.rarity %>
          </span>
        </div>
      </div>

      <!-- Card Type and Stats -->
      <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-6">
        <div class="grid md:grid-cols-2 gap-4">
          <div>
            <p class="text-sm text-gray-600 mb-1">Type</p>
            <p class="font-semibold"><%= @card.type_line %></p>
          </div>
          <% if @card.mana_cost.present? %>
            <div>
              <p class="text-sm text-gray-600 mb-1">Mana Cost</p>
              <p class="font-mono font-semibold"><%= @card.mana_cost %></p>
            </div>
          <% end %>
        </div>

        <% if @card.metadata['power'].present? && @card.metadata['toughness'].present? %>
          <div class="mt-4 pt-4 border-t border-gray-200">
            <p class="text-sm text-gray-600 mb-1">Power / Toughness</p>
            <p class="font-bold text-2xl"><%= @card.metadata['power'] %> / <%= @card.metadata['toughness'] %></p>
          </div>
        <% end %>
      </div>

      <!-- Oracle Text -->
      <% if @card.metadata['oracle_text'].present? %>
        <div class="bg-white border-2 border-gray-200 rounded-xl p-6">
          <h3 class="text-sm font-semibold text-gray-600 mb-3">Oracle Text</h3>
          <p class="text-gray-800 leading-relaxed whitespace-pre-line"><%= @card.metadata['oracle_text'] %></p>
        </div>
      <% end %>

      <!-- Flavor Text & Artist -->
      <% if @card.metadata['flavor_text'].present? || @card.metadata['artist'].present? %>
        <div class="from-yellow-50 to-gray-100 bg-gradient-to-r border-l-4 border-goldenrod rounded-xl p-6">
          <% if @card.metadata['flavor_text'].present? %>
            <p class="text-gray-500 text-sm leading-relaxed whitespace-pre-line italic"><%= @card.metadata['flavor_text'] %></p>
          <% end %>
          <% if @card.metadata['artist'].present? %>
            <p class="text-gray-600 text-sm mt-2"><strong>Illustrated by</strong> <em><%= @card.metadata['artist'] %></em></p>
          <% end %>
        </div>
      <% end %>

      <!-- Price -->
      <% if @card.eur_price %>
        <div data-price-container class="bg-green-50 border-l-4 border-green-400 rounded-lg p-6">
          <p class="text-sm text-gray-600">Market Price (EUR)</p>
          <p class="text-2xl font-bold text-green-600" data-card-preview-target="price">€<%= number_with_precision(@card.eur_price, precision: 2) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
