<div class="max-w-6xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Search Results</h1>

  <p class="mb-4 text-gray-600">Found <%= @cards.length %> result(s) for "<%= @query %>"</p>

  <% if @query.present? %>
    <% if @cards.any? %>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-4">
        <% @cards.each do |card| %>
          <%= link_to card_path(card), class: "block group" do %>
            <div class="relative overflow-hidden rounded-xl">
              <% if card.image_uri.present? %>
              <%= image_tag card.image_uri,
                  alt: card.name,
                  class: "w-full h-auto rounded-xl shadow-lg group-hover:shadow-xl transition-shadow",
                  loading: "lazy" %>

              <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center rounded-xl">
                <span class="text-white text-md font-semibold">View Card</span>
              </div>
              <% end %>
            </div>

            <p class="text-center mt-2 text-sm font-semibold truncate"><%= card.name %></p>
            <p class="text-center text-xs text-gray-500 truncate"><%= card.magic_set.name %></p>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">No cards found for "<%= @query %>"</p>
    <% end %>
  <% end %>
</div>
