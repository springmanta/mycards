<div class="max-w-7xl mx-auto mt-8 px-7 py-8">
  <div class="mb-8">
    <h1 class="text-4xl font-bold">Search Results</h1>
    <p class="text-gray-600 mt-1">Found <%= @cards.length %> result(s) for "<%= @query %>"</p>
  </div>

  <% if @query.present? %>

    <!-- Filters -->
    <div data-controller="toggle" data-toggle-open-value="<%= params[:rarity].present? || params[:type].present? || params[:sort].present? %>">
      <button type="button"
              data-action="click->toggle#toggle"
              class="w-full mb-4 flex items-center justify-between bg-gray-50 rounded-xl p-2 border-2 border-gray-200 hover:border-umber hover:text-goldenrod transition-colors cursor-pointer">
        <span class="font-semibold text-gray-700 flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
          </svg>
          Filters
          <% if params[:rarity].present? || params[:type].present? %>
            <span class="px-2 py-0.5 bg-umber text-white text-xs rounded-full">Active</span>
          <% end %>
        </span>
        <svg data-toggle-target="icon" class="w-5 h-5 text-gray-500 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>

      <div data-toggle-target="content" class="hidden">
        <%= form_with url: search_cards_path, method: :get, class: "mb-6 bg-white rounded-xl pt-6 px-6 p-2 border-2 border-gray-200", data: { turbo_frame: "_top", controller: "auto-submit" } do |f| %>
          <!-- Keep the search query -->
          <%= f.hidden_field :q, value: @query %>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <div>
              <%= f.select :rarity,
                  [
                    ['Rarities', ''],
                    ['Common', 'common'],
                    ['Uncommon', 'uncommon'],
                    ['Rare', 'rare'],
                    ['Mythic', 'mythic']
                  ],
                  { selected: params[:rarity] },
                  {
                    class: "w-full px-4 py-2.5 border-2 border-gray-200 rounded-lg focus:border-umber focus:outline-none",
                    data: { action: "change->auto-submit#submit" }
                  } %>
            </div>

            <div>
              <%= f.select :type,
                  [
                    ['Types', ''],
                    ['Creature', 'Creature'],
                    ['Instant', 'Instant'],
                    ['Sorcery', 'Sorcery'],
                    ['Enchantment', 'Enchantment'],
                    ['Artifact', 'Artifact'],
                    ['Planeswalker', 'Planeswalker'],
                    ['Land', 'Land'],
                    ['Battle', 'Battle']
                  ],
                  { selected: params[:type] },
                  {
                    class: "w-full px-4 py-2.5 border-2 border-gray-200 rounded-lg focus:border-umber focus:outline-none",
                    data: { action: "change->auto-submit#submit" }
                  } %>
            </div>

            <div>
              <%= f.select :sort,
                  [
                    ['Set / Number', ''],
                    ['Name (A-Z)', 'name_asc'],
                    ['Name (Z-A)', 'name_desc'],
                    ['Set (A-Z)', 'set_asc'],
                    ['Set (Z-A)', 'set_desc'],
                    ['Price ↑', 'price_asc'],
                    ['Price ↓', 'price_desc']
                  ],
                  { selected: params[:sort] },
                  {
                    class: "w-full px-4 py-2.5 border-2 border-gray-200 rounded-lg focus:border-umber focus:outline-none",
                    data: { action: "change->auto-submit#submit" }
                  } %>
            </div>

            <div class="flex gap-2">
              <%= f.submit "Filter", class: "flex-1 py-2.5 bg-umber text-white rounded-lg font-semibold hover:bg-golden-brown transition-colors cursor-pointer" %>
              <% if params[:rarity].present? || params[:type].present? || params[:sort].present? %>
                <%= link_to "Clear", search_cards_path(q: @query), class: "px-4 py-2.5 bg-gray-200 text-gray-700 rounded-lg font-semibold hover:bg-gray-300 transition-colors" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Cards Grid -->
    <% if @cards.any? %>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-4">
        <% @cards.each do |card| %>
          <%= link_to card_path(card), class: "group" do %>
            <div class="relative overflow-hidden rounded-lg">
              <% if card.image_uri.present? %>
                <%= image_tag card.image_uri,
                    alt: card.name,
                    class: "w-full rounded-lg shadow-md",
                    loading: "lazy" %>

                <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center rounded-xl">
                  <span class="text-white text-md font-semibold">View Card</span>
                </div>
              <% end %>
            </div>
            <p class="text-sm text-center mt-2 text-gray-700 group-hover:text-umber truncate font-semibold">
              <%= card.name %>
            </p>
            <p class="text-xs text-center text-gray-500 capitalize">
              <%= card.rarity %> • <%= card.magic_set&.name %>
            </p>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16 bg-white rounded-xl border-2 border-dashed border-gray-300">
        <h3 class="text-lg font-bold text-gray-900">No cards found</h3>
        <p class="mt-1 text-sm text-gray-500">Try a different search or adjust your filters.</p>
      </div>
    <% end %>
  <% end %>
</div>
