<div class="max-w-md mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Sign in</h1>

  <%= form_with url: session_path, class: "space-y-4" do |form| %>
    <div>
      <%= form.label :email_address, "Email address", class: "block text-sm font-semibold mb-2" %>
      <%= form.email_field :email_address,
          required: true,
          autofocus: true,
          autocomplete: "username",
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-600 focus:border-transparent text-base" %>
    </div>

    <div>
      <%= form.label :password, class: "block text-sm font-semibold mb-2" %>
      <%= form.password_field :password,
          required: true,
          autocomplete: "current-password",
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-600 focus:border-transparent text-base" %>
    </div>

    <%= form.submit "Sign in", class: "w-full bg-yellow-800 text-white px-6 py-3 rounded-lg font-semibold hover:bg-yellow-700 transition-colors cursor-pointer text-base" %>

    <%= link_to "Forgot password?", new_password_path, class: "block text-center mt-4 text-yellow-800 hover:text-yellow-700" %>
    <%= link_to "Don't have an account? Sign up", new_registration_path, class: "block text-center text-yellow-800 hover:text-yellow-700 font-semibold" %>
  <% end %>
</div>
