<%= form_with(model: @collection, class: "space-y-6") do |f| %>
  <% if @collection.errors.any? %>
    <div class="bg-red-50 border-2 border-red-200 rounded-xl p-4">
      <% @collection.errors.full_messages.each do |msg| %>
        <p class="text-sm text-red-600"><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-semibold text-gray-700 mb-1" %>
    <%= f.text_field :name,
        placeholder: "e.g. Commander Decks, Trade Binder...",
        class: "w-full px-4 py-2.5 border-2 border-gray-200 rounded-lg focus:border-umber focus:outline-none" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-semibold text-gray-700 mb-1" %>
    <%= f.text_area :description,
        rows: 3,
        placeholder: "What's this collection for?",
        class: "w-full px-4 py-2.5 border-2 border-gray-200 rounded-lg focus:border-umber focus:outline-none resize-none" %>
  </div>

  <div class="flex items-center gap-3 pt-2">
    <%= f.submit class: "bg-umber hover:bg-golden-brown text-white font-semibold px-6 py-2.5 rounded-xl transition-colors cursor-pointer" %>
    <%= link_to "Cancel", collections_path,
        class: "text-sm font-semibold text-gray-400 hover:text-umber transition-colors" %>
  </div>
<% end %>
