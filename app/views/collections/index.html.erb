<%# app/views/collections/index.html.erb %>

<div class="max-w-7xl mx-auto mt-8 px-7 py-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-4xl font-bold">myCards Collections</h1>

    <% if @collections.any? %>
      <%= link_to new_collection_path, class: "inline-flex items-center gap-2 bg-umber hover:bg-golden-brown text-white font-semibold px-4 py-2 rounded-xl transition-colors" do %>
        New Collection
      <% end %>
    <% end %>
  </div>

  <% if @collections.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @collections.each do |collection| %>
        <div class="bg-white shadow-xl border-2 border-gray-200 rounded-xl p-6 hover:border-umber transition-colors"
             data-controller="confirm">
          <%= link_to collection_path(collection), class: "block group" do %>
            <h2 class="text-xl font-bold text-gray-900 hover:text-goldenrod transition-colors">
              <%= collection.name %>
            </h2>

            <% if collection.description.present? %>
              <p class="text-sm text-gray-500 mt-2 line-clamp-2"><%= collection.description %></p>
            <% end %>

            <div class="flex items-center justify-between mt-4 pt-4 border-t border-gray-100">
              <span class="text-sm text-gray-500 font-semibold">
                <%= pluralize(collection.collection_cards.size, "card") %>
              </span>

              <% total = collection.collection_cards.sum { |cc| (cc.card.cardmarket_price || 0) * cc.quantity } %>
              <% if total > 0 %>
                <span class="text-sm font-semibold text-goldenrod">â‚¬<%= format('%.2f', total) %></span>
              <% end %>
            </div>
          <% end %>

          <div class="flex gap-3 mt-4 pt-3 border-t border-gray-100">
            <%= link_to "Edit", edit_collection_path(collection),
              class: "text-xs font-semibold text-gray-400 mt-3 hover:text-umber transition-colors cursor-pointer" %>
            <button data-action="click->confirm#show"
                    class="text-xs font-semibold text-gray-400 mt-3 hover:text-umber transition-colors cursor-pointer">
              Remove
            </button>
          </div>

          <!-- Confirmation Modal -->
          <div data-confirm-target="modal"
               data-action="click->confirm#cancel"
               class="hidden fixed inset-0 bg-gray-900/40 z-50 flex items-center justify-center">
            <div class="bg-white rounded-xl p-6 max-w-sm mx-4 shadow-2xl"
                 data-action="click->confirm#stopPropagation">
              <h3 class="text-xl font-bold mb-2 text-goldenrod">Remove Collection?</h3>
              <p class="text-gray-600 text-sm mb-6">Remove <strong><%= collection.name %></strong>?</p>
              <div class="flex gap-3">
                <button data-action="click->confirm#cancel"
                        class="flex-1 bg-gray-200 text-gray-800 py-2 rounded-lg font-semibold hover:bg-gray-300 cursor-pointer">
                  Cancel
                </button>
                <%= button_to "Remove", collection_path(collection),
                    method: :delete,
                    class: "flex-1 bg-coffee text-sm text-white p-3 rounded-lg font-semibold hover:bg-violet cursor-pointer" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16 bg-white p-4 rounded-xl border-2 border-dashed border-gray-300">
      <h3 class="text-lg font-bold text-gray-900">No collections yet</h3>
      <p class="mt-1 text-sm text-gray-500">Create your first collection to start organizing your cards.</p>
      <%= link_to "Create Collection", new_collection_path,
        class: "mt-4 inline-block bg-umber hover:bg-golden-brown text-white font-semibold px-4 py-2 rounded-xl transition-colors" %>
    </div>
  <% end %>
</div>
