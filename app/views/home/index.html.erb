<div style="height: calc(100vh - 64px);" class="flex items-center"> <!-- pt-16 accounts for navbar height -->
  <!-- Background -->
  <div class="absolute inset-x-0 bottom-0 top-0"> <!-- top-16 starts background below navbar -->
    <%= image_tag "cards.jpg", class: "w-full h-full object-cover", alt: "" %>
    <div class="absolute inset-0 bg-gradient-to-br from-gray-900/90 to-gray-800/85"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 w-full max-w-4xl mx-auto px-4 text-center text-white">
    <h1 class="text-5xl font-bold mb-4">myCards</h1>
    <p class="text-xl mb-8 text-gray-200">They deserve better than a shoebox.</p>

    <!-- Search with autocomplete -->
    <div data-controller="autocomplete" class="max-w-2xl mx-auto relative">
      <%= form_with url: search_cards_path, method: :get, data: { turbo: false } do |f| %>
        <%= f.text_field :q,
            placeholder: "Search for a card...",
            class: "w-full px-4 py-3 rounded-lg text-gray-900 bg-white/90 focus:bg-white focus:outline-none focus:ring-2 focus:ring-yellow-600",
            autofocus: true,
            autocomplete: "off",
            data: {
              autocomplete_target: "input",
              action: "input->autocomplete#search keydown.enter->autocomplete#submit"
            } %>

        <div data-autocomplete-target="results"
             class="hidden absolute z-10 w-full bg-white border border-gray-300 rounded-lg shadow-lg max-h-60 overflow-y-auto mt-2">
        </div>
      <% end %>

      <p class="text-sm text-gray-300 text-center mt-3">Type to search, press Enter or click a card</p>
    </div>
  </div>
</div>
