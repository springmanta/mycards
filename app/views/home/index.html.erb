<div class="relative py-20 md:py-40 overflow-hidden min-h-[50vh] md:min-h-0 flex items-center">
  <!-- Background with overlay -->
  <div class="absolute inset-0 z-0">
    <%= image_tag "cards.jpg", class: "w-full h-full object-cover", alt: "" %>
    <div class="absolute inset-0 bg-gradient-to-br from-gray-900/90 to-gray-800/85"></div>
  </div>

  <div class="relative z-10 max-w-4xl mx-auto px-4 text-center text-white w-full">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">myCards</h1>
    <p class="text-sm md:text-md mb-8 text-gray-200">You deserve better than a shoebox.</p>

    <%= form_with url: search_cards_path, method: :get, class: "max-w-2xl mx-auto" do |f| %>
      <div class="space-y-3">
        <%= f.text_field :q,
            placeholder: "Search for a card...",
            class: "text-center w-full px-4 py-3 md:py-4 rounded-lg text-gray-900 bg-white/90 focus:bg-white focus:outline-none focus:ring-2 focus:ring-yellow-600 text-base",
            autofocus: true %>
        <%= f.submit "Search", class: "w-full bg-yellow-800 text-white px-6 py-3 md:py-4 rounded-lg font-semibold hover:bg-yellow-700 transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
