<div data-controller="confirm" class="max-w-6xl mx-auto mt-8 px-7 py-8">
  <div class="grid lg:grid-cols-3 gap-8">
    <!-- Card Image -->
    <div class="lg:col-span-1">
      <% if @collection_card.card.image_url %>
        <%= image_tag @collection_card.card.image_url,
            alt: @collection_card.card.name,
            class: "w-full rounded-3xl shadow-xl sticky top-8" %>
      <% end %>
    </div>

    <!-- Card Details -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Title and Set Info -->
      <div>
        <h1 class="text-4xl font-bold mb-3"><%= @collection_card.card.name %></h1>
        <div class="flex flex-wrap gap-2">
          <span class="px-3 py-1 bg-gray-100 rounded-full text-sm font-semibold">
            <%= @collection_card.card.set_name %>
          </span>
          <span class="px-3 py-1 bg-gray-100 rounded-full text-sm font-semibold">
            <%= @collection_card.card.set_code.upcase %>
          </span>
          <span class="px-3 py-1 bg-gray-100 rounded-full text-sm font-semibold capitalize">
            <%= @collection_card.card.rarity %>
          </span>
        </div>
      </div>

      <!-- Card Type and Stats -->
      <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-6">
        <div class="grid md:grid-cols-2 gap-4">
          <div>
            <p class="text-sm text-gray-600 mb-1">Type</p>
            <p class="font-semibold"><%= @collection_card.card.type_line %></p>
          </div>
          <% if @collection_card.card.mana_cost.present? %>
            <div>
              <p class="text-sm text-gray-600 mb-1">Mana Cost</p>
              <p class="font-mono font-semibold"><%= @collection_card.card.mana_cost %></p>
            </div>
          <% end %>
        </div>

        <% if @collection_card.card.power.present? && @collection_card.card.toughness.present? %>
          <div class="mt-4 pt-4 border-t border-gray-200">
            <p class="text-sm text-gray-600 mb-1">Power / Toughness</p>
            <p class="font-bold text-2xl"><%= @collection_card.card.power %> / <%= @collection_card.card.toughness %></p>
          </div>
        <% end %>
      </div>

      <!-- Oracle Text -->
      <% if @collection_card.card.oracle_text.present? %>
        <div class="bg-white border-2 border-gray-200 rounded-xl p-6">
          <h3 class="text-sm font-semibold text-gray-600 mb-3">Oracle Text</h3>
          <p class="text-gray-800 leading-relaxed whitespace-pre-line"><%= @collection_card.card.oracle_text %></p>
        </div>
      <% end %>

      <!-- Flavor Text + Artist -->

      <% if @collection_card.card.flavor_text.present? %>
        <div class="bg-amber-50 border-l-4 border-amber-400 rounded-lg p-6">
          <p class="italic text-gray-700 leading-relaxed"><%= @collection_card.card.flavor_text %></p>
          <% if @collection_card.card.artist.present? %>
          <p class="text-xs text-gray-600 mt-1">Illustrated by <span class="font-semibold"><%= @collection_card.card.artist %></span></p>
          <% end %>
        </div>
      <% elsif @collection_card.card.artist.present? %>
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-sm text-gray-600">Illustrated by <span class="font-semibold"><%= @collection_card.card.artist %></span></p>
        </div>
      <% end %>

      <!-- Collection Info -->
      <div class="bg-white border rounded-lg p-6">
        <h3 class="font-bold mb-4">In Your Collection</h3>
        <dl class="grid md:grid-cols-2 gap-4">
          <div>
            <dt class="text-sm text-gray-600">Collection</dt>
            <dd class="font-semibold"><%= @collection_card.collection.name %></dd>
          </div>
          <div>
            <dt class="text-sm text-gray-600">Quantity</dt>
            <dd class="font-semibold"><%= @collection_card.quantity %>x</dd>
          </div>
          <div>
            <dt class="text-sm text-gray-600">Condition</dt>
            <dd class="font-semibold"><%= @collection_card.condition.titleize %></dd>
          </div>
          <div>
            <dt class="text-sm text-gray-600">Foil</dt>
            <dd class="font-semibold"><%= @collection_card.foil ? "Yes âœ¨" : "No" %></dd>
          </div>
          <% if @collection_card.price_paid %>
            <div>
              <dt class="text-sm text-gray-600">Price Paid</dt>
              <dd class="font-semibold text-green-600">$<%= number_with_precision(@collection_card.price_paid, precision: 2) %></dd>
            </div>
          <% end %>
          <% if @collection_card.acquired_at %>
            <div>
              <dt class="text-sm text-gray-600">Date Acquired</dt>
              <dd class="font-semibold"><%= @collection_card.acquired_at.strftime("%b %d, %Y") %></dd>
            </div>
          <% end %>
        </dl>
      </div>

      <!-- Actions -->
      <div class="flex gap-3">
        <%= link_to "Edit", edit_collection_card_path(@collection_card),
            class: "flex-1 text-center bg-umber text-white py-3 rounded-xl font-semibold hover:bg-golden-brown transition-colors" %>
        <%= button_to "Remove", collection_card_path(@collection_card),
            method: :delete,
            data: { action: "click->confirm#show" },
            class: "flex-1 bg-violet text-white px-15 py-3 rounded-xl font-semibold hover:bg-eggplant cursor-pointer transition-colors" %>
      </div>

      <!-- Confirmation Modal -->
      <div data-confirm-target="modal"
           data-action="click->confirm#cancel"
           class="hidden fixed inset-0 bg-gray-900/40 z-50 flex items-center justify-center">
        <div class="bg-white rounded-xl p-6 max-w-sm mx-4 shadow-2xl"
             data-action="click->confirm#stopPropagation">
          <h3 class="text-xl font-bold mb-2 text-goldenrod">Remove Card?</h3>
          <p class="text-gray-600 mb-6">Remove <%= @collection_card.card.name %> from your collection?</p>
          <div class="flex gap-3">
            <button data-action="click->confirm#cancel" class="flex-1 bg-gray-200 text-gray-800 py-2 rounded-lg font-semibold hover:bg-gray-300 cursor-pointer">
              Cancel
            </button>
            <button data-action="click->confirm#confirm" class="flex-1 bg-coffee text-white py-2 rounded-lg font-semibold hover:bg-violet cursor-pointer">
              Remove
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
