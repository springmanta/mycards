<!-- app/views/collection_cards/index.html.erb -->
<div class="max-w-7xl mx-auto px-4 py-8">
  <div class="mb-8 flex justify-between items-center">
    <div>
      <h1 class="text-2xl lg:text-3xl font-display font-bold mb-2">All myCards</h1>
      <p class="text-gray-600 font-bold"><%= @collection_cards.sum(&:quantity) %> total cards</p>
      <p class="text-gray-600">Collection value</p>
      <div>
        <p class="font-bold">
          <%= number_with_precision(
                @collection_cards.sum { |cc| cc.card.cardmarket_price.to_f * cc.quantity },
                precision: 2
              ) %> â‚¬
        </p>
      </div>
    </div>

    <div class="flex gap-4 items-center">
      <!-- View toggle -->
      <div class="flex gap-2">
        <%= link_to "List", collection_cards_path(view: 'list', sort: params[:sort], q: params[:q], rarity: params[:rarity], type: params[:type], set: params[:set]),
            class: "px-3 py-1 rounded #{@view_mode == 'list' ? 'bg-goldenrod text-white' : 'bg-gray-200 hover:bg-gray-100'}" %>
        <%= link_to "Grid", collection_cards_path(view: 'grid', sort: params[:sort], q: params[:q], rarity: params[:rarity], type: params[:type], set: params[:set]),
            class: "px-3 py-1 rounded #{@view_mode == 'grid' ? 'bg-goldenrod text-white' : 'bg-gray-200 hover:bg-gray-100'}" %>
      </div>
    </div>
  </div>

  <!-- Filters -->

  <div data-controller="toggle" data-toggle-open-value="<%= params[:q].present? || params[:rarity].present? || params[:type].present? || params[:colors].present? %>">
    <button type="button"
            data-action="click->toggle#toggle"
            class="w-full mb-4 flex items-center justify-between bg-gray-50 rounded-xl p-2 border-2 border-gray-200 hover:border-umber hover:text-goldenrod transition-colors cursor-pointer">
      <span class="font-semibold text-gray-700 flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
        </svg>
        Filters
        <% if params[:q].present? || params[:rarity].present? || params[:type].present? || params[:colors].present? %>
          <span class="px-2 py-0.5 bg-umber text-white text-xs rounded-full">Active</span>
        <% end %>
      </span>
      <svg data-toggle-target="icon" class="w-5 h-5 text-gray-500 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </button>

  <div data-toggle-target="content" class="hidden">
  <%= form_with url: collection_cards_path, method: :get, class: "mb-6 bg-white rounded-xl p-6 border-2 border-gray-200", data: { turbo_frame: "_top", controller: "auto-submit" } do |f| %>
    <%= f.hidden_field :view, value: @view_mode %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
      <div class="lg:col-span-2">
        <%= f.text_field :q,
            value: params[:q],
            placeholder: "Search cards in your collection...",
            class: "w-full px-4 py-2.5 border-2 border-gray-200 rounded-lg focus:border-umber focus:outline-none" %>
      </div>

      <div>
        <%= f.select :rarity,
            [
              ['All Rarities', ''],
              ['Common', 'common'],
              ['Uncommon', 'uncommon'],
              ['Rare', 'rare'],
              ['Mythic', 'mythic']
            ],
            { selected: params[:rarity] },
            {
              class: "w-full px-4 py-2.5 border-2 border-gray-200 rounded-lg focus:border-umber focus:outline-none",
              data: { action: "change->auto-submit#submit" }
            } %>
      </div>

      <div>
        <%= f.select :type,
            [
              ['All Types', ''],
              ['Creature', 'Creature'],
              ['Instant', 'Instant'],
              ['Sorcery', 'Sorcery'],
              ['Enchantment', 'Enchantment'],
              ['Artifact', 'Artifact'],
              ['Planeswalker', 'Planeswalker'],
              ['Land', 'Land']
            ],
            { selected: params[:type] },
            {
              class: "w-full px-4 py-2.5 border-2 border-gray-200 rounded-lg focus:border-umber focus:outline-none",
              data: { action: "change->auto-submit#submit" }
            } %>
      </div>

      <div>
        <p class="text-xs font-semibold text-gray-500 mb-1">Colors</p>
        <div class="flex gap-2 flex-wrap items-center">
          <% [
            ["W", "ms ms-w ms-cost", "White"],
            ["U", "ms ms-u ms-cost", "Blue"],
            ["B", "ms ms-b ms-cost", "Black"],
            ["R", "ms ms-r ms-cost", "Red"],
            ["G", "ms ms-g ms-cost", "Green"]
          ].each do |code, icon_class, name| %>
            <% selected = Array(params[:colors]).include?(code) %>
            <label class="cursor-pointer">
              <input type="checkbox" name="colors[]" value="<%= code %>"
                    <%= 'checked' if selected %>
                    data-action="change->auto-submit#submit"
                    class="hidden" />
              <span class="inline-block rounded-full <%= selected ? 'border' : 'opacity-30 hover:opacity-60' %> transition-all"
                    title="<%= name %>">
                <i class="<%= icon_class %>" style="font-size: 22px;"></i>
              </span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="flex gap-2">
        <%= f.submit "Filter", class: "flex-1 px-6 py-2.5 bg-umber text-white rounded-lg font-semibold hover:bg-golden-brown transition-colors cursor-pointer" %>
        <% if params[:q].present? || params[:rarity].present? || params[:type].present? %>
          <%= link_to "Clear", collection_cards_path(view: @view_mode), class: "px-4 py-2.5 bg-gray-200 text-gray-700 rounded-lg font-semibold hover:bg-gray-300 transition-colors" %>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>

  <% if @collection_cards.empty? %>
    <div class="bg-gray-100 border border-gray-300 text-gray-700 px-6 py-6 rounded text-center">
      <p class="text-xl text-goldenrod font-bold">
        <% if params[:q].present? || params[:rarity].present? || params[:type].present? %>
          No cards match your filters
        <% else %>
          Your collection is empty
        <% end %>
      </p>
    </div>
  <% else %>
    <div data-controller="confirm">
      <% if @view_mode == 'list' %>
        <!-- List view with sortable headers -->
        <div class="bg-gray-100 rounded-md overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gradient-to-r from-yellow-600 to-umber shadow-lg text-gray-50 font-extralight">
              <tr>
                <th class="px-4 py-3 text-left">
                  <%= link_to collection_cards_path(sort: params[:sort] == 'name_asc' ? 'name_desc' : 'name_asc', view: @view_mode, q: params[:q], rarity: params[:rarity], type: params[:type]), class: "flex items-center gap-1 hover:text-yellow-300" do %>
                    Name
                    <% if params[:sort]&.start_with?('name') %>
                      <span><%= params[:sort] == 'name_asc' ? 'â†‘' : 'â†“' %></span>
                    <% end %>
                  <% end %>
                </th>
                <th class="px-4 py-3 text-left">
                  <%= link_to collection_cards_path(sort: params[:sort] == 'set_asc' ? 'set_desc' : 'set_asc', view: @view_mode, q: params[:q], rarity: params[:rarity], type: params[:type]), class: "flex items-center gap-1 hover:text-yellow-300" do %>
                    Set
                    <% if params[:sort]&.start_with?('set') %>
                      <span><%= params[:sort] == 'set_asc' ? 'â†‘' : 'â†“' %></span>
                    <% end %>
                  <% end %>
                </th>
                <th class="px-4 py-3 text-left">Qty</th>
                <th class="px-4 py-3 text-center">
                  <%= link_to collection_cards_path(sort: params[:sort] == 'price_asc' ? 'price_desc' : 'price_asc', view: @view_mode, q: params[:q], rarity: params[:rarity], type: params[:type]), class: "flex items-center justify-center gap-1 hover:text-yellow-300" do %>
                    Price
                    <% if params[:sort]&.start_with?('price') %>
                      <span><%= params[:sort] == 'price_asc' ? 'â†‘' : 'â†“' %></span>
                    <% end %>
                  <% end %>
                </th>
                <th class="px-4 py-3 text-center">Condition</th>
                <th class="px-4 py-3 text-center">Foil?</th>
                <th class="px-4 py-3 text-left">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @collection_cards.each do |cc| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-3 py-2 font-bold text-sm"><%= link_to cc.card.name, collection_card_path(cc), class: "hover:text-umber" %></td>
                  <td class="px-3 py-2 text-sm text-gray-600"><%= cc.card.set_name %></td>
                  <td class="px-3 py-2 text-sm text-left"><%= cc.quantity %></td>
                  <td class="px-3 py-2 text-sm text-center">
                    <% if cc.card.cardmarket_price %>
                      <%= number_with_precision(cc.card.cardmarket_price, precision: 2) %>â‚¬
                    <% else %>
                      <span class="text-gray-400">N/A</span>
                    <% end %>
                  </td>
                  <td class="px-3 py-2 text-sm text-center"><%= condition_badge(cc.condition) %></td>
                  <td class="px-3 py-2 text-sm text-center"><%= cc.foil ? "âœ“" : "-" %></td>
                  <td class="px-4 py-3">
                    <div class="flex gap-2 items-center">
                      <%= link_to "âœï¸", edit_collection_card_path(cc), class: "text-blue-600 hover:text-blue-800" %>
                      <%= button_to "ðŸ—‘ï¸", collection_card_path(cc),
                          method: :delete,
                          data: {
                            action: "click->confirm#show",
                            card_name: cc.card.name
                          },
                          class: "text-red-600 hover:text-red-800 p-0 bg-transparent border-none cursor-pointer",
                          form: { class: "inline" } %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Confirmation Modal -->
        <div data-confirm-target="modal"
             data-action="click->confirm#cancel"
             class="hidden fixed inset-0 bg-gray-900/40 z-50 flex items-center justify-center">
          <div class="bg-white rounded-xl p-6 max-w-sm mx-4 shadow-2xl"
               data-action="click->confirm#stopPropagation">
            <h3 class="text-xl font-bold mb-2 text-goldenrod">Remove Card?</h3>
            <p class="text-gray-600 mb-6">Remove <span data-confirm-target="cardName"></span> from your collection?</p>
            <div class="flex gap-3">
              <button data-action="click->confirm#cancel" class="flex-1 bg-gray-200 text-gray-800 py-2 rounded-lg font-semibold hover:bg-gray-300 cursor-pointer">
                Cancel
              </button>
              <button data-action="click->confirm#confirm" class="flex-1 bg-coffee text-white py-2 rounded-lg font-semibold hover:bg-violet cursor-pointer">
                Remove
              </button>
            </div>
          </div>
        </div>
      <% else %>
        <!-- Grid view -->
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-3">
          <% @collection_cards.each do |collection_card| %>
            <%= link_to collection_card_path(collection_card),
                class: "group relative block rounded-xl overflow-hidden transition-shadow" do %>
              <% if collection_card.card.image_url %>
                <div class="relative">
                  <%= image_tag collection_card.card.image_url,
                      alt: collection_card.card.name,
                      class: "w-full rounded-xl shadow-xl transition-all group-hover:brightness-75 cursor-pointer" %>
                  <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center rounded-xl">
                    <span class="text-goldenrod text-md font-semibold">Details</span>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
